FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sample;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs            ("libsampling.so");

interpolationScheme cell;

setFormat       raw;

writeControl    writeTime; // this ensures that it's writing only at writeInterval

sets
(

    // make sure to change (x1 y1 z1) and (x2 y2 z2) to
    // the coordinates of the start and end points

    fronttop 
    {
        type    lineCell;
        axis    xyz;
        start   (-0.4958 0.0614 0.0);
        end     ( 0.0042 0.0303 0.0);
    }
    frontbottom
    {
        type    lineCell;
        axis    xyz;
        start   (-0.4968  0.0604 0.0);
        end     (-0.0042 -0.0303 0.0);
    }
    backtop
    {
        type    lineCell;
        axis    xyz;
        start   (0.0042 0.0303 0.0);
        end     (0.4968 -0.0604 0.0);
    }
    backbottom
    {
        type    lineCell;
        axis    xyz;
        start   (0.0042  0.0303 0.0);
        end     (0.4968 -0.0604 0.0);
    }

);

fields          ( p U T );


